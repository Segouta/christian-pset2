<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.christian.christian_pset2.PickActivity">

    <EditText
        android:id="@+id/wordAdder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#999999"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/actionButton"
        android:layout_width="178dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:onClick="createStory"
        android:text="Use!"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordAdder" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Pick a story..."
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionButton"
        app:layout_constraintVertical_bias="0.88" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="338dp"
        android:layout_height="210dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98">

        <RadioGroup
            android:id="@+id/radioButtons"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/radioSimple"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="selectStory"
                android:buttonTint="@color/colorAccent"
                android:drawablePadding="30dp"
                android:rotation="90"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioTarzan"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="selectStory"
                android:buttonTint="@color/colorAccent"
                android:rotation="90"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioUniversity"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="selectStory"
                android:buttonTint="@color/colorAccent"
                android:rotation="90"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioClothes"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="selectStory"
                android:buttonTint="@color/colorAccent"
                android:rotation="90"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioDance"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="selectStory"
                android:buttonTint="@color/colorAccent"
                android:rotation="90"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioRandom"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="selectStory"
                android:buttonTint="@color/colorAccent"
                android:rotation="90"
                android:textColor="#ffffff"
                android:visibility="visible" />

        </RadioGroup>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="22dp"
                android:gravity="center"
                android:rotation="90"
                android:text="Simple"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="72dp"
                android:gravity="center"
                android:rotation="90"
                android:text="Tarzan"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="112dp"
                android:gravity="center"
                android:rotation="90"
                android:text="University"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="170dp"
                android:gravity="center"
                android:rotation="90"
                android:text="Clothes"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="225dp"
                android:gravity="center"
                android:rotation="90"
                android:text="Dance"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="3dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="252dp"
                android:gravity="center"
                android:rotation="90"
                android:text="Pick Random"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Enter these words:"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/wordAdder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="404dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:progressTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/actionButton"
        app:layout_constraintVertical_bias="0.089"
        tools:layout_editor_absoluteX="3dp" />

</android.support.constraint.ConstraintLayout>
